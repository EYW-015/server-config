mcmeta:
  format: 18
  description: <gradient:#ff7043:#ffca28:#ff7043>MineInAbyss <white>- <gradient:#fff906:#fffb46>Server
    Resourcepack
icon: pack.png
server:
  ip: "0.0.0.0"
  port: 8082
  publicAddress: "https://{{ lookup('env', 'SERVER_NAME', default='unknown') }}.pack.mineinabyss.com"
prompt: ""
force: false
obfuscate: false
cachedPackAmount: 18
menu:
  title: Packy Pack Picker
  height: 6
  subMenus:
    hud:
      title: Custom Hud
      height: 6
      button:
        type: COMPASS
        displayName: <gold>Custom Hud
      modifiers:
        offset:
          x: 4
          y: 4
        size:
          width: 1
          height: 1
      type: MENU
      packs:
        custom_hud: {}
    music:
      title: Music
      height: 6
      button:
        type: JUKEBOX
        displayName: <gold>Music
      modifiers:
        offset:
          x: 4
          y: 1
        size:
          width: 1
          height: 1
      type: MENU
      packs:
        custom_music: {}
    build:
      title: Music
      height: 6
      button:
        type: GRASS_BLOCK
        displayName: <gold>Build
      modifiers:
        offset:
          x: 4
          y: 3
        size:
          width: 1
          height: 1
      type: MENU
      packs:
        build: {}
    armor:
      title: Armor Picker
      height: 6
      button:
        itemFlags:
          - HIDE_ATTRIBUTES
      modifiers:
        offset:
          x: 1
          y: 1
        size:
          width: 2
          height: 4
      type: CYCLING
      packs:
        new_armor:
          button:
            type: DIAMOND_HELMET
            displayName: <gold>New Armor
        old_armor:
          button:
            type: GOLD_HELMET
            displayName: <gold>Old Armor
        vanilla_armor:
          button:
            type: IRON_HELMET
            displayName: <gold>Vanilla
    tools:
      title: Packy Pack Picker2
      height: 6
      button:
        displayName: <gold>Tools
        itemFlags:
          - HIDE_ATTRIBUTES
      modifiers:
        offset:
          x: 6
          y: 1
        size:
          width: 2
          height: 4
      type: CYCLING
      packs:
        2d_tools:
          button:
            type: DIAMOND_SWORD
            displayName: <gold>2D Tools
        3d_tools:
          button:
            type: GOLD_SWORD
            displayName: <gold>3D Tools
        vanilla_tools:
          button:
            type: IRON_SWORD
            displayName: <gold>Vanilla Tools
